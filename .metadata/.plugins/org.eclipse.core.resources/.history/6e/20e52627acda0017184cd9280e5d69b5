package lab4;

public class CreditCard {
	
	private String amount;
	private double balance = 0.0;
	private String date;
	private String type;
	private String vendor;
	
	
	public CreditCard(String date,String type,String vendor,String amount) {
		this.date = date;
		this.type = type;
		this.vendor = vendor;
		this.amount = amount;		
	}
	
	public String getDate() {
		return date;
	}
	
	public String getType() {
		return type;
	}
	
	public String getVendor() {
		return vendor;
	}
	
	public String getAmount() {
		return amount;
	}
	
	public double balance(String amount) {
		if(type == "CREDIT" ) {
			balance = balance + amount;
		}
		else if(type == "DEBIT") {
			balance = balance - amount;
		}
		return balance;
	}
	
	public void finalStatus() {
		if(balance > 0) {
			balance = balance + 0.1;
			System.out.println("Warning: Your final amount is more than zero.");
			System.out.println("Charged a 10% fee. Final amount is $" + balance );
		}
		else if(balance == 0) {
			System.out.println("Thank you for your payment");			
		}
		else if(balance < 0) {
			System.out.println("Thank you for your payment");
			System.out.println("Overpayment $" + amount);
		}
			
	}	

}
